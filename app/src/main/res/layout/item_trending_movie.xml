<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trendingMovieItemRootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription">
    
    <ImageView
        android:id="@+id/trendingMovieItemImageView"
        android:layout_width="240dp"
        android:layout_height="320dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/trendingMovieItemTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:gravity="start"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/trendingMovieItemImageView"
        app:layout_constraintEnd_toEndOf="@id/trendingMovieItemImageView"
        app:layout_constraintBottom_toTopOf="@id/trendingMovieItemGenreTextView"
        tools:text="Notebook"/>

    <TextView
        android:id="@+id/trendingMovieItemGenreTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/trendingMovieItemImageView"
        app:layout_constraintEnd_toEndOf="@id/trendingMovieItemImageView"
        app:layout_constraintBottom_toBottomOf="@id/trendingMovieItemImageView"
        tools:text="SCI-FI"/>
</androidx.constraintlayout.widget.ConstraintLayout>